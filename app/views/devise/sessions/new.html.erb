<div class="container my-5">
  <h1 class="text-center mb-4">Login</h1>
  <div class="row justify-content-center">
    <div class="col-md-6">
      <div class="card shadow-sm">
        <div class="card-body">
          <%= form_with scope: :user, url: session_path(:user), local: true, class: 'needs-validation' do |form| %>
            <% if flash[:alert] %>
              <div class="alert alert-danger"><%= flash[:alert] %></div>
            <% end %>
            <div class="mb-3">
              <%= form.label :email, class: 'form-label' %>
              <%= form.email_field :email, autofocus: true, class: 'form-control', placeholder: 'Enter your email' %>
            </div>
            <div class="mb-3">
              <%= form.label :password, class: 'form-label' %>
              <%= form.password_field :password, autocomplete: "current-password", class: 'form-control', placeholder: 'Enter your password' %>
            </div>
            <div class="mb-3 form-check">
              <%= form.check_box :remember_me, class: 'form-check-input' %>
              <%= form.label :remember_me, class: 'form-check-label' %>
            </div>
            <div class="d-flex justify-content-between">
              <%= form.submit 'Login', class: 'btn btn-primary' %>
              <%= link_to 'Sign Up', new_user_registration_path, class: 'btn btn-secondary' %>
            </div>
          <% end %>
        </div>
      </div>
    </div>
  </div>
</div>

<%= render "devise/shared/links" %>
