<div class="container mt-5">
    <div class="mx-auto p-5 shadow-sm">
        <h2 class="text-center mb-4 fw-semibold">Blog Post</h2>

        <dl class="row mb-4">
            <dt class="col-sm-3 text-muted text-uppercase small">Title</dt>
            <dd class="col-sm-9 mb-2"><%= @blog_post.title %></dd>

            <dt class="col-sm-3 text-muted text-uppercase small">Content</dt>
            <dd class="col-sm-9 mb-2"><%= @blog_post.content %></dd>

            <dt class="col-sm-3 text-muted text-uppercase small">Published At</dt>
            <dd class="col-sm-9">
                <%= @blog_post.published_at.present? ? l(@blog_post.published_at, format: :long) : "Not scheduled" %>
            </dd>
        </dl>

        <div class="d-flex justify-content-start gap-2">
            <%= link_to 'Edit', edit_blog_post_path(@blog_post), class: 'btn btn-primary btn-lg me-2' %>
            <%= link_to 'Back', root_path, class: 'btn btn-secondary btn-lg' %> </div>
    </div>
</div>