<div class="container my-4">
  <h1 class="text-center mb-4">Blog Post Details</h1>

  <div class="card shadow">
    <div class="card-header bg-primary text-light">
      <h2 class="card-title mb-0"><%= @blog_post.title %></h2>
    </div>
    <div class="card-body">
      <p class="card-text"><%= @blog_post.body %></p>
    </div>
    <div class="card-footer d-flex justify-content-between">
      <%= link_to 'Edit', edit_blog_post_path(@blog_post), class: 'btn btn-warning' %>
      <%= link_to 'Delete', blog_post_path(@blog_post), method: :delete, data: { confirm: 'Are you sure?' }, class: 'btn btn-danger' %>
      <%= link_to 'Back', root_path, class: 'btn btn-secondary' %>
    </div>
  </div>
</div>